{
  "executable": "OpenLingo",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "OpenLingo",
  "author": "",
  "singleInstance": false,
  "environment": "Production",
  "build": {
    "appId": "com.OpenLingo.app",
    "productName": "OpenLingo",
    "copyright": "Copyright Â© 2021",
    "buildVersion": "1.0.0",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}